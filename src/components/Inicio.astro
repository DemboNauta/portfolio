---
export interface Props {
  lang?: string;
}
const { lang = 'es' } = Astro.props;
---
<section id="inicio" class="flex flex-col items-center justify-center min-h-[60vh] text-center px-4 py-12">
  <img src="/img/foto_edgar.webp" alt="Edgar Milá" class="w-40 h-40 rounded-full shadow-lg mb-6 object-cover border-4 border-gray-200 dark:border-gray-700" loading="lazy" />
  <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-gray-100 mb-2">
    {lang === 'en' ? "Hi, I'm Edgar Milá" : "Hola, soy Edgar Milá"}
  </h1>
  <p class="text-lg md:text-xl text-gray-700 dark:text-gray-300 max-w-2xl mb-8">
    {lang === 'en' ? (
      <>
        <span class="text-red-600 dark:text-yellow-200">1 year of experience</span>. Computer Engineering student and FullStack Developer at Soluciones IP. Specialized in <span class="text-red-600 dark:text-yellow-200">Angular and .NET</span>.
      </>
    ) : (
      <>
        <span class="text-red-600 dark:text-yellow-200">+1 año de experiencia</span>. Estudiante de Ingeniería Informática y Desarrollador FullStack en Soluciones IP. Especializado en <span class="text-red-600 dark:text-yellow-200">Angular y .NET</span>.
      </>
    )}
